FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["ZenFlow.CatalogService.csproj", "./"]
RUN dotnet restore "ZenFlow.CatalogService.csproj"
COPY . .
WORKDIR "/src/."
RUN dotnet build "ZenFlow.CatalogService.csproj" -c Debug -o /app/build

FROM build AS publish
RUN dotnet publish "ZenFlow.CatalogService.csproj" -c Debug -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ZenFlow.CatalogService.dll"]